/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/nascent -profile test
 */

params {
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
  // TODO nf-core: Give any required params for the test so that command line flags are not needed
  singleEnd = false
  readPaths = [
    ['Testdata', ['https://github.com/nf-core/test-datasets/raw/nascent/testdata/nascentsample.sra', 'https://github.com/nf-core/test-datasets/raw/nascent/testdata/nascentsample.sra']]
  ]
}
